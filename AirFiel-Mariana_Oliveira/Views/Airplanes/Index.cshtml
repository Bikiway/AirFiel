@model IEnumerable<AirFiel_Mariana_Oliveira.Data.Entities.Airplanes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePlane)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePlane)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
