@model AirFiel_Mariana_Oliveira.Models.PlanesViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit the airplane</h1>

<h4>Airplanes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HowManyClasses" class="control-label"></label>
                <input asp-for="HowManyClasses" class="form-control" />
                <span asp-validation-for="HowManyClasses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity1" class="control-label"></label>
                <input asp-for="Capacity1" class="form-control" />
                <span asp-validation-for="Capacity1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity2" class="control-label"></label>
                <input asp-for="Capacity2" class="form-control" />
                <span asp-validation-for="Capacity2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePlane" class="control-label"></label>
                <input asp-for="ImagePlane" class="form-control" type="file" />
                <span asp-validation-for="ImagePlane" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary" style="background-color: wheat">
                    <i class="fa fa-plane" style="color: chocolate"></i> Edit
                </button>
            </div>
        </form>
    </div>
</div>

<div class="col-md-4">
    <img src="@Url.Content(Model.ImagePlane)" alt="Image" style="width:400px; height:350px; margin-left: 450px; margin-top: -410px;">
</div>

<div>
    <a asp-action="Index" style="font-size:20px; color:darkolivegreen;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
