@model AirFiel_Mariana_Oliveira.Models.CitiesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Capital</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CountryName" class="control-label">Country</label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Flags" class="control-label">Country Flag</label>
                <input asp-for="Flags" class="form-control" type="file" />
                <span asp-validation-for="Flags" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Airport" class="control-label">Airports Name</label>
                <input asp-for="Airport" class="form-control" />
                <span asp-validation-for="Airport" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary" style="background-color: cadetblue">
                    <i class="fa fa-globe-europe" style="color: whitesmoke"></i> Create 
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-size:20px; color:darkolivegreen;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
