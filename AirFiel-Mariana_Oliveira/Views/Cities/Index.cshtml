@model IEnumerable<AirFiel_Mariana_Oliveira.Data.Entities.Cities>

@{
    ViewData["Title"] = "Index";
}

<h1>Add Cities and Countries</h1>

<p>
    <a asp-action="Create" style="font-size: 15px; color: cadetblue;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Airport)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Flags))
                    {
                      <img src="@Url.Content(item.Flags)" alt="Image" style="width:100px; height:150px; max-width:100%; height:auto">
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airport)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary edit-button" style="background-color: whitesmoke; color: grey;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary details-button" style="background-color: whitesmoke; color: grey;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary delete-button" style="background-color: whitesmoke; color: grey;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>

    var editButton = document.querySelectorAll(".edit-button");
    var detailsButton = document.querySelectorAll(".details-button");
    var deleteButton = document.querySelectorAll(".delete-button");

    function changeColor(element, color) {
        element.style.backgroundColor = color;
    }

    editButton.forEach(function (element) {
        element.addEventListener("mouseover", function () {
            changeColor(element, "yellow");
        });

        element.addEventListener("mouseout", function () {
            changeColor(element, "whitesmoke");
        });
    });

    detailsButton.forEach(function (element) {
        element.addEventListener("mouseover", function () {
            changeColor(element, "lightblue");
        });

        element.addEventListener("mouseout", function () {
            changeColor(element, "whitesmoke");
        });
    });

    deleteButton.forEach(function (element) {
        element.addEventListener("mouseover", function () {
            changeColor(element, "red");
        });

        element.addEventListener("mouseout", function () {
            changeColor(element, "whitesmoke");
        });
    });

</script>